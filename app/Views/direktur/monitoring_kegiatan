                        <th class="px-6 py-4">Pengusul</th>
                        <th class="px-6 py-4">Jurusan</th>
                        <th class="px-6 py-4 text-center">Status</th>
                        <th class="px-6 py-4 text-right">Anggaran</th>
                        <th class="px-6 py-4 text-right">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <?php foreach ($kegiatan_list as $row): ?>
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="font-bold text-slate-800"><?php echo htmlspecialchars($row['nama_kegiatan']); ?></div>
                            <div class="text-xs text-slate-400 mt-1">ID: #<?php echo $row['id']; ?></div>
                        </td>
                        <td class="px-6 py-4 text-slate-700"><?php echo htmlspecialchars($row['username']); ?></td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 bg-slate-100 text-slate-700 rounded text-xs font-medium">
                                <?php echo htmlspecialchars($row['nama_jurusan'] ?? 'Pusat'); ?>
                            </span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <?php
                            $statusClass = match($row['status_pengajuan'] ?? $row['status_usulan']) {
                                'Disetujui' => 'bg-emerald-100 text-emerald-700 border-emerald-200',
                                'Ditolak' => 'bg-rose-100 text-rose-700 border-rose-200',
                                'Diajukan' => 'bg-blue-100 text-blue-700 border-blue-200',
                                default => 'bg-slate-100 text-slate-600 border-slate-200'
                            };
                            ?>
                            <span class="inline-flex px-2 py-1 rounded text-[10px] font-bold border <?php echo $statusClass; ?> uppercase">
                                <?php echo $row['status_pengajuan'] ?? $row['status_usulan']; ?>
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right font-mono font-bold text-slate-700">
                            Rp <?php echo number_format($row['nominal_rab'], 0, ',', '.'); ?>
